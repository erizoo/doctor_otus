<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button" parent="Widget.MaterialComponents.Button" />

    <style name="Button.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.Medium.Button</item>
    </style>

    <style name="Button.Primary.Green">
        <item name="android:textColor">@color/selector_text_color_states_material_button</item>
        <item name="android:background">@drawable/bg_button_primary_square</item>
        <item name="backgroundTint">@color/selector_color_states_material_button</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="Button.Primary.Green.Circle">
        <item name="android:background">@drawable/bg_button_primary</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

</resources>